<?xml version="1.0" encoding="utf-8" ?>
<data>

  <!-- Moderate-sized font -->
  <definition id="targa-16"
			  font="targa"
			  size="16"
			  color="0xffffff"
			  outline="0x000000"
			  align="left"
			  />

  <!-- Text button wider than default -->
  <definition id="text_button_wide"
			  width="200"
			  height="50"
			  >
	<text use_def="targa-16"
		  align="center"
		  >
	  <color id="over"
			 value="0xcccccc"
			 />
	</text>
  </definition>

  <!-- Button that starts the game -->
  <button
	  center_x="true" center_y="true"
	  x="0" y="0"
	  use_def="text_button_wide"
	  label="$BUTTON_START_GAME"
	  >
	<param type="string" value="start"/>
  </button>

  <!-- Radio to select the game language -->
  <radio_group
	  id="locale_radio"
	  x="10" y="10"
	  >
	<radio id="en-US" label="$LANGUAGE_BILINGUAL:EN-US" context="index"/>
	<radio id="pt-BR" label="$LANGUAGE_BILINGUAL:PT-BR" context="index"/>
  </radio_group>

</data>

