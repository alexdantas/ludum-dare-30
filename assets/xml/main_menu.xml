<?xml version="1.0" encoding="utf-8" ?>
<data>
  <include id="_definitions" />

  <!-- Background -->
  <sprite src="main_menu_bg" x="0" y="0" />

  <!-- Button that starts the game -->
  <button
	  x="30" y="200"
	  use_def="text_button_wide"
	  label="$BUTTON_START_GAME"
	  >
	<param type="string" value="start"/>
  </button>

  <!-- Button to the options pop-up -->
  <button
	  x="30" y="255"
	  use_def="text_button_wide"
	  label="$BUTTON_OPTIONS"
	  >
	<param type="string" value="options"/>
  </button>

  <!-- Button that quits the game -->
  <button
	  x="30" y="310"
	  use_def="text_button_wide"
	  label="$BUTTON_QUIT_GAME"
	  >
	<param type="string" value="quit"/>
  </button>

</data>

