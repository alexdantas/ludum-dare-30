<?xml version="1.0" encoding="utf-8" ?>
<data>
  <include id="_definitions" />

  <!-- Background -->
  <sprite src="main_menu_bg" x="0" y="0" />

  <!-- Background image of this Pop-Up -->
  <definition id="gray"
			  src="ui/borders_gray"
			  />
  <!-- Defining the background size -->
  <chrome use_def="gray"
		  x="170" y="140"
		  width="300" height="200"
		  />

  <!-- Radio to select the game language -->
  <text
	  x="180" y="150"
	  text="$LANGUAGE"
	  />
  <radio_group id="locale_radio"
			   x="180" y="170"
			   >
	<radio id="en-US" label="$LANGUAGE_BILINGUAL:EN-US" context="index"/>
	<radio id="pt-BR" label="$LANGUAGE_BILINGUAL:PT-BR" context="index"/>
  </radio_group>

  <!-- Toggle fullscreen -->
  <checkbox id="fullscreen_toggle"
			x="180" y="240"
			label="$BUTTON_FULLSCREEN">
	<param type="string" value="fullscreen" />
  </checkbox>

  <button id="button_back"
		  use_def="text_button_wide"
		  x="220" y="285"
		  label="$BUTTON_BACK">
	<param type="string" value="back"/>
  </button>

</data>

